<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">


    <title>To-Do</title>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    
  </head>
  <body style="background-color: black;">

    
      <br/>
<center><h1 style="color: beige; font-size:100px; "><b>TO-DO</b></h1></center>
      <div class="container" style="position:absolute;top: 30%;bottom: 0;left: 0;right: 0;margin:auto;">
        <div class="d-flex justify-content-center">
            <div class="shadow p-3 mb-5 bg-white rounded" style="width:600px; color: rgb(0, 0, 0);">
                <center><h3><b>REGISTER</b></h3>
                <form action="/register" method="POST">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="basic-addon1" style="background-color: black;color: beige;">Name</span>
                        </div>
                            <input type="text" class="form-control" placeholder="Enter Name" name="uname" id="uname" aria-label="Username" style = "border-color: black;" aria-describedby="basic-addon1">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="basic-addon1" style="background-color: black;color: beige;">Username</span>
                        </div>
                            <input type="text" class="form-control" placeholder="Enter Email/Username" name="email" id="email" aria-label="Username" style = "border-color: black;" aria-describedby="basic-addon1">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="basic-addon1" style="background-color: black;color: beige;">Contact</span>
                        </div>
                            <input type="number" class="form-control" placeholder="Enter Phone no." name="contact" id="phone" aria-label="Username" style = "border-color: black;" aria-describedby="basic-addon1">
                    </div>
                    <div class="input-group mb-3">    
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1" style="background-color: black;color: beige;">Password</span>
                        </div>
                            <input type="password" class="form-control" placeholder="Enter Passwrod" onchange="password()" name="password1" id="pass1" aria-label="Username" style = "border-color: black;" aria-describedby="basic-addon1">        
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1" style="background-color: black;color: beige;">Confirm Password</span>
                        </div>
                            <input type="password" class="form-control" placeholder="Enter Passwrod" onchange="password()" name="password2" id="pass2" aria-label="Username" style = "border-color: black;" aria-describedby="basic-addon1">
                        </div>

                    <button class="btn btn-primary" id="reg" onchange="password()" type="submit">Register</button> 
                    </form>
                    <% if (msg) { %>
                        <p style="color:red;"><%= msg %></p>
                        <% } else { %>
                            <p><%= msg %></p>
                        <% } %>
                    <br>
                    <a href="/login">Login</a>   
                    
                <!-- </form> -->
            </center>
            </div>
        </div>


    <script>
        function password(){
            var pass1 = document.getElementById('pass1').value
            var pass2 = document.getElementById('pass2').value
            if (pass1 != pass2){
                document.getElementById('reg').disabled = true
            }else{
                document.getElementById('reg').disabled = false
            }
        }
    </script>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https ://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html> 